<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom">
            <Button x:Name="AddReviewBtn" Content="レビューを追加" HorizontalAlignment="Left" Click="AddReviewBtn_Click"/>
        <Button x:Name="ShowReviewBtn" Content="レビューを追加" HorizontalAlignment="Left" Click="ShowReviewBtn_Click" />
            </StackPanel>
             <DataGrid x:Name="ReviewListViewGrid" ItemsSource="{Binding Mode=OneWay}" Margin="0"/>

        </DockPanel>
    </Grid>
</Window>
